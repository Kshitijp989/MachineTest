@model IEnumerable<MachineTest.Models.Product>
@{
    ViewBag.Title = "Product List";
}

<h2>@ViewBag.Title</h2>


<p>
    <a href="@Url.Action("Create", "Product")" class="btn btn-success">Create New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.CategoryId</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", "Product", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
    }
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("Index", "Product", new { page = i })">@i</a>
    }
    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", "Product", new { page = ViewBag.CurrentPage + 1 })">Next</a>
    }
</div>
